extends layout

block content
  .container.mt-5
    .row.justify-content-center
      .col-md-6
        h1.text-center Logowanie
        form(action='/login' method='POST')
          .form-group
            label(for='email') Adres email
            input.form-control(type='email' name='email' id='email' placeholder='Wprowadź adres email' required)
          .form-group
            label(for='password') Hasło
            input.form-control(type='password' name='password' id='password' placeholder='Wprowadź hasło' required)
          button.btn.btn-primary(type='submit') Zaloguj się
          if (error)
            .text-danger
              p= error
        p.text-center Nie masz konta? <a href='/register'>Zarejestruj się</a>
        div#message-box