extends layout

block content
  .container.mt-5
    .row.justify-content-center
      .col-md-6
        h1.text-center Rejestracja
        form(action='/register' method='POST')
          .form-group
            label(for='email') Adres e-mail
            input.form-control(type='email' name='email' id='email' placeholder='Wprowadź adres e-mail' required)
          .form-group
            label(for='username') Nazwa użytkownika
            input.form-control(type='text' name='username' id='username' placeholder='Wprowadź nazwę użytkownika' required)
          .form-group
            label(for='password') Hasło
            input.form-control(type='password' name='password' id='password' placeholder='Wprowadź hasło' required)
          button.btn.btn-primary(type='submit') Zarejestruj się
          if (error)
            .text-danger
              p= error
        p.text-center Masz już konto? <a href='/login'>Zaloguj się</a>
        div#message-box